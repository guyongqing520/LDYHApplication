<?xml version="1.0" encoding="utf-8"?>
<!-- TODO: Update blank fragment layout -->


<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.syxsoft.ldyhapplication.ui.IndexActivity">

    <LinearLayout android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="56dp"
        android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:padding="15dp"
        android:orientation="horizontal"
        xmlns:android="http://schemas.android.com/apk/res/android" >

        <RelativeLayout
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView android:id="@+id/xihao1"
                android:layout_centerVertical="true"
                android:text="*"
                android:paddingRight="4dp"
                android:textColor="@color/colorAccent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/rzsb_bl_bgdd_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/xihao1"
                android:text="办公地点"
                android:textColor="@color/colornavblack"
                android:textSize="16sp" />
            <EditText
                android:id="@+id/rzsb_bl_bgdd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/rzsb_bl_bgdd_title"
                android:layout_marginLeft="30sp"
                android:lines="1"
                android:background="@null"
                android:hint="请输入"
                />

        </RelativeLayout>


    </LinearLayout>
    <LinearLayout android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:padding="15dp"
        android:orientation="horizontal"
        xmlns:android="http://schemas.android.com/apk/res/android" >

        <RelativeLayout
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView android:id="@+id/xihao3"
                android:layout_centerVertical="true"
                android:text="*"
                android:paddingRight="4dp"
                android:textColor="@color/colorAccent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/bkbs_text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/xihao3"
                android:text="办公类型"
                android:textColor="@color/colornavblack"
                android:textSize="16sp" />
            <TextView
                android:text="请选择"
                android:id="@+id/rzsb_bl_bglx"
                android:drawableRight="@mipmap/kqglz_ar02"
                android:layout_alignBottom="@+id/bkbs_text3"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:drawablePadding="4dp"
                android:textColor="@color/colorWord99"
                android:layout_height="wrap_content" />

        </RelativeLayout>


    </LinearLayout>

    <LinearLayout android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:padding="15dp"
        android:orientation="horizontal"
        xmlns:android="http://schemas.android.com/apk/res/android" >

        <RelativeLayout
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView android:id="@+id/xihao5"
                android:layout_centerVertical="true"
                android:text="*"
                android:paddingRight="4dp"
                android:textColor="@color/colorAccent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/bkbs_text5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/xihao5"
                android:text="选择日期"
                android:textColor="@color/colornavblack"
                android:textSize="16sp" />
            <TextView
                android:text="请选择"
                android:id="@+id/rzsb_bl_xzrq"
                android:drawableRight="@mipmap/kqglz_ar02"
                android:layout_alignBottom="@+id/bkbs_text5"
                android:layout_alignParentRight="true"
                android:textColor="@color/colorWord99"
                android:layout_width="wrap_content"
                android:drawablePadding="4dp"
                android:layout_height="wrap_content" />

        </RelativeLayout>


    </LinearLayout>

    <LinearLayout android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:padding="15dp"
        android:orientation="horizontal"
        xmlns:android="http://schemas.android.com/apk/res/android" >

        <RelativeLayout
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView android:id="@+id/xihao4"
                android:layout_centerVertical="true"
                android:text="*"
                android:paddingRight="4dp"
                android:textColor="@color/colorAccent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/bkbs_text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/xihao4"
                android:text="关联任务"
                android:textColor="@color/colornavblack"
                android:textSize="16sp" />
            <TextView
                android:text="请选择"
                android:id="@+id/rzsb_bl_glrw"
                android:drawableRight="@mipmap/kqglz_ar02"
                android:layout_alignBottom="@+id/bkbs_text4"
                android:layout_alignParentRight="true"
                android:textColor="@color/colorWord99"
                android:layout_width="wrap_content"
                android:drawablePadding="4dp"
                android:layout_height="wrap_content" />

        </RelativeLayout>


    </LinearLayout>
    <LinearLayout android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:padding="15dp"
        android:orientation="horizontal"
        xmlns:android="http://schemas.android.com/apk/res/android" >

        <RelativeLayout
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:visibility="gone"
                android:id="@+id/bkbs_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/xihao2"
                android:text="工作内容"
                android:textColor="@color/colornavblack"
                android:textSize="16sp" />

            <EditText
                android:gravity="top"
                android:textSize="16sp"
                android:id="@+id/rzsb_bl_gznr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/bkbs_text2"
                android:layout_below="@+id/bkbs_text2"
                android:hint="请输入具体工作内容"
                android:background="@null"
                android:lines="8"

                />

        </RelativeLayout>


    </LinearLayout>





</LinearLayout>

</FrameLayout>
