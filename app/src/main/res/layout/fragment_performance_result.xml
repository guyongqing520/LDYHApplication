<?xml version="1.0" encoding="utf-8"?><!-- TODO: Update blank fragment layout -->

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.syxsoft.ldyhapplication.ui.IndexActivity">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="10dp">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:height="40dp"
                android:background="@drawable/view_kqbd3"
                android:drawableRight="@mipmap/searchico"
                android:text="年份"
                android:paddingLeft="15dp"
                android:paddingRight="20dp"
                android:textColor="@color/colorWord33"
                android:drawablePadding="10dp"
                android:textSize="16dp" />
            <TextView
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@color/colorWord99"
                android:layout_width="0.5dp"
                android:layout_marginLeft="-5dp"
                android:layout_height="25dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:height="40dp"
                android:background="@drawable/view_kqbd2"
                android:drawableLeft="@mipmap/searchico"
                android:drawablePadding="8dp"
                android:hint="请输入关键字"
                android:paddingLeft="15dp"
                android:textSize="16dp" />



            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="搜索"
                android:textColor="@color/colornavblue"
                android:textSize="16dp" />
        </LinearLayout>
        <LinearLayout android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:padding="15dp"
            android:orientation="horizontal"
            xmlns:android="http://schemas.android.com/apk/res/android" >

            <RelativeLayout
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/bkbs_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/xihao1"
                    android:text="2017年4月月度鉴定"
                    android:textColor="@color/colorWord33"
                    android:textSize="18sp" />
                <ImageView
                    android:layout_centerVertical="true"
                    android:src="@mipmap/kqglz_ar02"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/timetxt"
                    android:text="开始时间："
                    android:layout_marginTop="5dp"
                    android:textSize="16sp"
                    android:textColor="@color/colorWord66"
                    android:layout_below="@+id/bkbs_text1"
                    android:layout_alignLeft="@+id/bkbs_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/time"
                    android:text="2015-11-21"
                    android:textSize="16sp"
                    android:textColor="@color/colorWord66"
                    android:layout_alignBottom="@id/timetxt"
                    android:layout_toRightOf="@id/timetxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/timetxt2"
                    android:text="结束时间："
                    android:layout_marginTop="5dp"
                    android:textSize="16sp"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/colorWord66"
                    android:layout_toRightOf="@+id/time"
                    android:layout_alignBottom="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/time2"
                    android:text="2017-12-11"
                    android:layout_marginTop="5dp"
                    android:textSize="16sp"
                    android:textColor="@color/colorWord66"
                    android:layout_toRightOf="@+id/timetxt2"
                    android:layout_alignBottom="@+id/timetxt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />



            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>


</FrameLayout>

