<?xml version="1.0" encoding="utf-8"?>


<LinearLayout android:id="@+id/detail"
    android:background="@color/white"
    android:padding="15dp"
    android:layout_marginTop="1dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/img1"
        android:src="@mipmap/rzsb04"
        android:layout_width="40dp"
        android:layout_height="40dp" />

    <TextView
        android:id="@+id/type"
        android:text="请假类型"
        android:layout_marginBottom="5dp"
        android:textColor="@color/colornavblack"
        android:layout_alignTop="@+id/img1"
        android:textSize="16sp"
        android:layout_toRightOf="@+id/img1"
        android:layout_marginLeft="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/time1"
        android:text="开始时间：2018-02-05"
        android:textSize="14sp"
        android:textColor="@color/colorWord66"
        android:layout_below="@+id/type"
        android:layout_alignLeft="@+id/type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/time2"
        android:text="结束时间：2018-02-05"
        android:textSize="14sp"
        android:layout_below="@+id/time1"
        android:textColor="@color/colorWord66"
        android:layout_alignLeft="@+id/type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/state"
        android:text="未审批"
        android:textColor="@color/colorbgpink"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
</LinearLayout>