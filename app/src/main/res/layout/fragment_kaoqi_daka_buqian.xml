<?xml version="1.0" encoding="utf-8"?><!-- TODO: Update blank fragment layout -->


<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.syxsoft.ldyhapplication.ui.IndexActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:id="@+id/imghead"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_centerVertical="true"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:width="10dp"
                android:src="@mipmap/headxi"


                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imghead"
                android:text="张某某"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/arr01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@mipmap/kqdk0106arrbo" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="4dp"
                android:layout_toLeftOf="@id/arr01"
                android:text="2018-02-06"
                android:textColor="@color/colornavblue"
                android:textSize="14sp" />
        </RelativeLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#ccc"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="0dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/bia"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/linbg"
                    android:paddingLeft="7dp"
                    android:text="1"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/dakasb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/bia"
                    android:text="上午上班时间12：00"
                    android:textColor="#888888"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/dasjd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/dakasb"
                    android:layout_below="@+id/dakasb"
                    android:layout_marginTop="15dp"
                    android:text="打卡时间11：00"
                    android:textColor="#333"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/dasj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/dasjd"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/dasjd"
                    android:background="@drawable/view_kqbd"
                    android:padding="5dp"
                    android:text="申请补卡"
                    android:textColor="@color/colornavblue"
                    android:textSize="14sp" />


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="0dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/bia1"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/linbg"
                    android:paddingLeft="7dp"
                    android:text="2"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/dakasb1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/bia1"
                    android:text="上午上班时间12：00"
                    android:textColor="#888888"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/dasjd1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/dakasb1"
                    android:layout_below="@+id/dakasb1"
                    android:layout_marginTop="15dp"
                    android:text="打卡时间11：00"
                    android:textColor="#333"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/dasj1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/dasjd1"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/dasjd1"
                    android:background="@drawable/view_kqbd"
                    android:padding="5dp"
                    android:text="申请补卡"
                    android:textColor="@color/colornavblue"
                    android:textSize="14sp" />


            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>

