<?xml version="1.0" encoding="utf-8"?>
<!-- TODO: Update blank fragment layout -->

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.syxsoft.ldyhapplication.ui.Home.IndexActivity">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="56dp"
    android:scrollbars="none">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/record_gridiew" />

        <LinearLayout
            android:background="@color/white"
            android:layout_marginTop="1dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:layout_marginLeft="20dp"
                android:background="@drawable/view_circle_zcqd"
                android:layout_width="10dp"
                android:layout_height="10dp" />

            <TextView
                android:text="正常签到"
                android:layout_marginLeft="5dp"
                android:textSize="10sp"
                android:textColor="@color/colorWord66"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginLeft="15dp"
                android:background="@drawable/view_circle_wqqd"
                android:layout_width="10dp"
                android:layout_height="10dp" />
            <TextView
                android:text="外勤签到"
                android:layout_marginLeft="5dp"
                android:textSize="10sp"
                android:textColor="@color/colorWord66"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginLeft="15dp"
                android:background="@drawable/view_circle_fqq"
                android:layout_width="10dp"
                android:layout_height="10dp" />
            <TextView
                android:text="非全勤"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:textSize="10sp"
                android:textColor="@color/colorWord66"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginLeft="15dp"
                android:background="@drawable/view_circle_qj"
                android:layout_width="10dp"
                android:layout_height="10dp" />
            <TextView
                android:text="请假"
                android:layout_marginLeft="5dp"
                android:textSize="10sp"
                android:textColor="@color/colorWord66"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:id="@+id/select_date"
                android:gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:textColor="@color/colorWord33"
                android:text="2018年12月22日（星期五）"
                android:layout_width="match_parent"
                android:layout_height="40dp" />

        </LinearLayout>
        <TextView
            android:gravity="center_horizontal"
            android:background="@color/grey"
            android:layout_width="wrap_content"
            android:layout_height="1dp" />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyler_view_date_dayanalysis"
            android:paddingTop="2dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>
</ScrollView>

</FrameLayout>


