<?xml version="1.0" encoding="utf-8"?>


<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="net.syxsoft.ldyhapplication.ui.IndexActivity">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp"
    android:background="@color/white"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageView"
        android:layout_marginTop="50dp"
        android:layout_width="178dp"
        android:layout_gravity="center"
        android:layout_height="126dp"
        android:src="@mipmap/login01" />

    <EditText
        android:id="@+id/user"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/view_kqbd1"
        android:drawableLeft="@mipmap/login02"
        android:drawablePadding="8dp"
        android:hint="手机号"
        android:layout_margin="15dp"
        android:inputType="phone"
        android:layout_gravity="center"
        android:paddingLeft="15dp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:layout_height="47dp"
        android:background="@drawable/view_kqbd1"
        android:drawableLeft="@mipmap/login03"
        android:drawablePadding="8dp"
        android:hint="密码"
        android:paddingLeft="15dp"
        android:inputType="textPassword"
        android:layout_gravity="center"
     />

    <Button
        android:id="@+id/login_btn"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/view_kqbdblue"
        android:text="登录"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        />

</LinearLayout>

</FrameLayout>