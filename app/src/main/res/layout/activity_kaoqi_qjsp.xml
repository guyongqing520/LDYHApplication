<?xml version="1.0" encoding="utf-8"?>
<!-- TODO: Update blank fragment layout -->


<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <include layout="@layout/actionbar_base_layout"></include>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            >

       <TableLayout
           android:stretchColumns="*"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <TableRow>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:gravity="center"
                   android:padding="10dp"
                   android:text="未审批"
                   android:textColor="@color/colornavblue"
                   android:textSize="15sp" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:gravity="center"
                   android:padding="10dp"
                   android:text="已审批"
                   android:textColor="@color/colorWord33"
                   android:textSize="15sp" />
           </TableRow>
           <TableRow>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="1dp"
                   android:text=""
                   android:background="@color/colornavblue"
                   />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="1dp"
                   android:text=""
                   android:background="@color/grey"
                   />

           </TableRow>

       </TableLayout>

    </LinearLayout>
   <LinearLayout
       android:background="@color/white"
       android:padding="15dp"
       android:layout_marginTop="10dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <RelativeLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">
           <ImageView
               android:id="@+id/img1"
               android:src="@mipmap/rzsb04"
               android:layout_width="40dp"
               android:layout_height="40dp" />

           <TextView
               android:id="@+id/type1"
               android:text="请假类型"
               android:layout_marginBottom="5dp"
               android:textColor="@color/colornavblack"
               android:layout_alignTop="@+id/img1"
               android:textSize="16sp"
               android:layout_toRightOf="@+id/img1"
               android:layout_marginLeft="10sp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />

           <TextView
               android:id="@+id/time1"
               android:text="开始时间：2018-02-05"
               android:textSize="14sp"
               android:layout_below="@+id/type1"
               android:layout_alignLeft="@+id/type1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />

           <TextView
               android:text="结束时间：2018-02-05"
               android:textSize="14sp"
               android:layout_below="@+id/time1"
               android:layout_alignLeft="@+id/type1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />

           <TextView
               android:text="未审批"
               android:textColor="@color/colorbgpink"
               android:layout_centerVertical="true"
               android:layout_alignParentRight="true"
               android:textSize="16sp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />

       </RelativeLayout>
   </LinearLayout>

</LinearLayout>



