<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.syxsoft.ldyhapplication.ui.IndexActivity">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="56dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            >

       <TableLayout
           android:stretchColumns="*"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <TableRow>
               <TextView
                   android:padding="10dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="我的签到"
                   android:textColor="@color/colornavblue"
                   android:textSize="15sp"
                   android:gravity="center"
                   />
               <TextView
                   android:padding="10dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="我的请假"
                   android:textSize="15sp"
                   android:gravity="center"
                   />
           </TableRow>
           <TableRow>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="1dp"
                   android:text=""
                   android:background="@color/colornavblue"
                   />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="1dp"
                   android:text=""
                   android:background="@color/grey"
                   />

           </TableRow>

       </TableLayout>

    </LinearLayout>
    <LinearLayout
        android:padding="15dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/start"
                android:text="开始"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/start_time"
                android:layout_below="@+id/start"
                android:layout_alignLeft="@+id/start"
                android:text="2018年2月1日"
                android:drawableRight="@mipmap/kqglz_ar04"
                android:textSize="14sp"
                android:textColor="@color/colornavblack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/start_time2"
                android:layout_alignBottom="@+id/start_time"
                android:layout_alignParentRight="true"
                android:text="2018年2月1日"
                android:drawableRight="@mipmap/kqglz_ar04"
                android:textSize="14sp"
                android:textColor="@color/colornavblack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/start2"
                android:text="结束"
                android:layout_above="@+id/start_time2"
                android:layout_alignLeft="@+id/start_time2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_centerInParent="true"
                android:src="@mipmap/kqglz_ar05"

                android:layout_width="wrap_content"
                android:layout_height="35dp" />

        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/qinjadetail"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/start_time3"
                android:text="2018-02-06（星期三）10：31"
                android:textSize="13sp"
                android:textColor="@color/colorWord33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/admimg"
                android:src="@mipmap/kqdk0105navg1"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/start_time3"
                android:layout_alignLeft="@+id/start_time3"
                android:layout_width="12dp"
                android:layout_height="12dp" />

            <TextView
                android:textSize="12sp"
                android:layout_toRightOf="@id/admimg"
                android:layout_alignBottom="@+id/admimg"
                android:text="签到地址：武汉市瘩山区关东街道光谷大道58-2号总部国际"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>

</FrameLayout>


