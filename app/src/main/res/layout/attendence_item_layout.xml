<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    android:background="@color/white"
    android:padding="15dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018-02-06（星期三）10：31"
            android:textColor="@color/colorWord33"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/admimg"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_alignLeft="@+id/name"
            android:layout_below="@+id/name"
            android:layout_marginTop="10dp"
            android:src="@mipmap/kqdk0105navg1" />

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/admimg"
            android:layout_toRightOf="@id/admimg"
            android:text="签到地址：武汉市瘩山区关东街道光谷大道58-2号总部国际"
            android:textColor="@color/colorWord66"
            android:textSize="12sp" />

    </RelativeLayout>

</LinearLayout>