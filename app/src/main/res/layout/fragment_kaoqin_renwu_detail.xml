        android:layout_marginTop="60dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
<LinearLayout android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="1dp"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:padding="15dp"
        android:orientation="horizontal"
        xmlns:android="http://schemas.android.com/apk/res/android" >
        <RelativeLayout
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/renwu_detail_miaoshu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="任务描述："
                android:textSize="16sp" />
            <TextView
                android:text="哦哦哦有三个名字孔不错哦，这是一个我的请假请批复哦，谢谢领导"
                android:layout_toRightOf="@+id/renwu_detail_miaoshu"
                android:layout_alignTop="@id/renwu_detail_miaoshu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="3"
                />
        </RelativeLayout>
    </LinearLayout>


    <LinearLayout android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:padding="15dp"
        android:orientation="horizontal"
        xmlns:android="http://schemas.android.com/apk/res/android" >

        <RelativeLayout
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView android:id="@+id/xihao"
                android:layout_centerVertical="true"
                android:visibility="gone"
                android:text="*"
                android:textColor="@color/colorAccent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/bkbs_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/xihao"
                android:text="请假类型："
                android:textSize="16sp" />

            <TextView
                android:id="@+id/renwu_detail_leixin"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/bkbs_text"
                android:layout_alignBottom="@+id/bkbs_text"
                android:layout_width="wrap_content"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colornavblack"
                android:text="否" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:padding="15dp"
        android:orientation="horizontal"
        xmlns:android="http://schemas.android.com/apk/res/android" >

        <RelativeLayout
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView android:id="@+id/xihao1"
                android:layout_centerVertical="true"
                android:visibility="gone"
                android:text="*"
                android:textColor="@color/colorAccent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/bkbs_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/xihao1"
                android:text="开始时间："
                android:textSize="16sp" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/bkbs_text1"
                android:layout_alignBottom="@+id/bkbs_text1"
                android:layout_width="wrap_content"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colornavblack"
                android:text="2018-10-23" />

        </RelativeLayout>


    </LinearLayout>
    <LinearLayout android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:padding="15dp"
        android:orientation="horizontal"
        xmlns:android="http://schemas.android.com/apk/res/android" >

