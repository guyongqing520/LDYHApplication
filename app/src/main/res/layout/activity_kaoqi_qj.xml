                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/bkbs_text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/xihao3"
                android:text="时长（h）："
                android:textSize="16sp" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/bkbs_text3"
                android:layout_alignBottom="@+id/bkbs_text3"
                android:layout_width="wrap_content"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colornavblack"
                android:text="12" />

        </RelativeLayout>


    </LinearLayout>
    <LinearLayout android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:padding="15dp"
        android:orientation="horizontal"
        xmlns:android="http://schemas.android.com/apk/res/android" >

        <RelativeLayout
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView android:id="@+id/xihao6"
                android:visibility="gone"
                android:text="*"
                android:textColor="@color/colorAccent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/bkbs_text6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/xihao6"
                android:text="请假事由："
                android:textSize="16sp" />

            <TextView

                android:text="哦哦哦有三个名字孔不错哦，这是一个我的请假请批复哦，谢谢领导"
                android:layout_toRightOf="@+id/bkbs_text6"
                android:layout_alignTop="@id/bkbs_text6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="3"
                />

        </RelativeLayout>


    </LinearLayout>
    <LinearLayout android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:padding="10dp"
        android:orientation="horizontal"
        xmlns:android="http://schemas.android.com/apk/res/android" >

        <RelativeLayout
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView android:id="@+id/xihao5"
                android:text="*"
                android:textColor="@color/colorAccent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/bkbs_text5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/xihao5"
                android:text="审批意见"
                android:textColor="@color/colornavblack"
                android:textSize="16sp" />

            <EditText
                android:layout_below="@+id/bkbs_text5"
                android:layout_alignLeft="@id/bkbs_text5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="3"
                android:hint="请输入您的缺卡原因"

                />

        </RelativeLayout>


    </LinearLayout>


</LinearLayout>

