<?xml version="1.0" encoding="utf-8"?>
<!-- TODO: Update blank fragment layout -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.syxsoft.ldyhapplication.ui.Home.IndexActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*">

                <TableRow>

                    <TextView
                        android:id="@+id/tab_text1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="我的签到"
                        android:textColor="@color/colorWord99"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tab_text2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="我的请假"
                        android:textColor="@color/colornavblue"
                        android:textSize="15sp" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/tab_line1"
                        android:layout_width="wrap_content"
                        android:layout_height="2dp"
                        android:background="@color/grey"
                        android:text="" />

                    <TextView
                        android:id="@+id/tab_line2"
                        android:layout_width="wrap_content"
                        android:layout_height="2dp"
                        android:background="@color/colornavblue"
                        android:text="" />
                </TableRow>

            </TableLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="15dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/start"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:text="开始" />

                <TextView
                    android:id="@+id/start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/start"
                    android:layout_below="@+id/start"
                    android:drawablePadding="4dp"
                    android:drawableRight="@mipmap/kqglz_ar04"
                    android:text="2018年2月1日"
                    android:textColor="@color/colorWord66"
                    android:textSize="14sp" />


                <TextView
                    android:id="@+id/end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/start_time"
                    android:layout_alignParentRight="true"
                    android:drawablePadding="4dp"
                    android:drawableRight="@mipmap/kqglz_ar04"
                    android:text="2018年2月1日"
                    android:textColor="@color/colorWord66"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/start2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/end_time"
                    android:layout_alignLeft="@+id/end_time"
                    android:text="结束" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"

                    android:layout_centerInParent="true"
                    android:src="@mipmap/kqglz_ar05" />

            </RelativeLayout>

        </LinearLayout>

        <com.wuxiaolong.pullloadmorerecyclerview.PullLoadMoreRecyclerView
            android:id="@+id/pullLoadMoreRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</FrameLayout>
