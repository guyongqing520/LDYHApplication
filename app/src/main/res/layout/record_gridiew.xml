<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_marginTop="1dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/record_left"
            android:src="@mipmap/kqglz_ar03"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:padding="20dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/record_title"
            android:text="2018年2月"
            android:textSize="16dp"
            android:textColor="@color/colornavblack"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/record_right"
            android:src="@mipmap/kqglz_ar02"
            android:padding="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <LinearLayout

        android:background="@color/white"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="日"
            android:layout_weight="1"
            android:textSize="14sp"
            android:textColor="@color/colorWord66"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="一"
            android:layout_weight="1"
            android:textSize="14sp"
            android:textColor="@color/colorWord66"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="二"
            android:layout_weight="1"
            android:textSize="14sp"
            android:textColor="@color/colorWord66"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="三"
            android:layout_weight="1"
            android:textSize="14sp"
            android:textColor="@color/colornavblack"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="四"
            android:layout_weight="1"
            android:textSize="14sp"
            android:textColor="@color/colorWord66"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="五"
            android:layout_weight="1"
            android:textSize="14sp"
            android:textColor="@color/colorWord66"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="六"
            android:layout_weight="1"
            android:textSize="14sp"
            android:textColor="@color/colorWord66"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyler_view_date"
        android:paddingTop="2dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>


